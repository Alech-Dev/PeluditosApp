<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items center">
                    {{title}} <a href="notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                {{#if image}}
                    <img src="{{image}}" class="picture-peludito rounded-circle mx-auto m-4" alt="Foto del peludito">
                {{else}}
                    <img src="/img/silueta-perfil.jpg" class="picture-peludito rounded-circle mx-auto m-4" alt="Foto del peludito">
                {{/if}}
                <h5>Nombre Peludito:</h5>
                <p>{{namePeludito}}</p>
                <h5>Ciudad donde se encuentra:</h5>
                <p>{{city}}</p>
                <h5>Descripci√≥n:</h5>
                <p>{{description}}</p>
                <form action="notes/delete/{{_id}}?_method=delete" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <button class="btn col-md-12 btn-danger btn-sm btn-block" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card col-md-3 mx-auto">
        <div class="card-body text-center">
            <h1>Hello {{user.name}}</h1>
            <p class="lead">There are not notes yet.</p>
            <a href="/notes-add" class="btn btn-success col-md-12 btn-block">Create One!</a>
        </div>
    </div>
    {{/each}}
</div>