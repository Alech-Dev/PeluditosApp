<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>
            <img src="/img/logo_small_icon_only_inverted.png" class="rounded-circle mx-auto d-block m-4 logo-in" alt="Logo">
            <div class="card-body">
                <form action="signin" method="post">
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="E-mail" autofocus>
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password">
                    </div>
                    <br>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark col-md-12 btn-block">
                            SignIn
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>